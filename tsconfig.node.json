{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/preload/*",
    "src/main/controllers/*",
    "src/main/**/*",
    "tests/main/sdk/*",
    "tests/main/api/*",
    "tests/**/*",
    ".test.env.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/main/api/*"
      ],
      "@sdk/*": [
        "src/main/sdk/*"
      ],
      "@controllers/*": [
        "src/main/controllers/*"
      ],
    }
  },
}
